<div class="modal fade" id="realModal" tabindex="-1" role="dialog" aria-labelledby="realModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_with(model: positionparent, remote: true) do |form| %>
        <div class="modal-header">
          <h5 class="modal-title"><%= "#{params[:action].camelize}" %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <% if positionparent.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(positionparent.errors.count, "error") %> prohibited this positionparent from being saved:</h2>
              <ul>
                <% positionparent.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="field">
            <% if positionparent.start_time == nil %>
              <%= form.label :日付 %>
              <%= form.date_field :start_time, value: date.strftime("%Y-%m-%d") %>
            <% else %>
              <%= form.label :日付 %>
              <%= form.date_field :start_time, value: positionparent.start_time.strftime("%Y-%m-%d") %>
            <% end %>
          </div>
          <%= form.fields_for :reals do |f| %>
            <div class="field">
              <%= f.label :habit_id %>
              <%= f.collection_select :habit_id, current_user.habits.all.order("name"), :id, :name %>
              <%= f.label :時間 %>
              <%= f.number_field :time %>
            </div>
          <% end %>
        </div>
        <div class="modal-footer actions">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= form.submit %>
          <% if real.position != nil %>
            <%= link_to "削除", positionparent_real_path, method: :delete, class: "dropdown-item text-danger", remote: true, data: { confirm: '本当に削除しますか？' } %>
          <% else %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>