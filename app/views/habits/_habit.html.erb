<div class="card-body pr-1">
  <% @habits.each do |habit| %>
    <td><%= habit.name %></td>
    <td><%= habit.target %></td>
    <button type="submit" class="btn right" >
      <%= link_to edit_habit_path(habit), remote: true, method: :get do %> <%# 編集ボタン %>
        <i class="fas fa-cog"></i>
      <% end %>
      <%= link_to habit, remote: true, data: { confirm: '本当に削除しますか?' }, method: :get do %> <%# ゴミ箱ボタン %>
        <i class="fas fa-trash"></i>
      <% end %>
    </button>
    <div class="habit-border"></div>
  <% end %>
</div>
