$("#habitModal").modal("hide");
$('body').removeClass('modal-open');
$('.modal-backdrop').remove();

<% if @status %>
$("#habits_<%= @habit.name %>").replaceWith("<%= j(render @habit) %>");
<% @reals.each do |real| %>
  $('[data-id="<%= real.id %>"]').replaceWith("<%= j(render real) %>");
<% end %>

<% else %>
$("#modalArea").html("<%= j(render 'form', habit: @habit) %>")
$("#modalArea").find(".modal").modal('show')
<% end %>