$("#habitModal").modal("hide");
$('body').removeClass('modal-open');
$('.modal-backdrop').remove();

<% if @status %>
$("#habitsIndex").append("<%= j(render @habit) %>");

<% else %>
$("#modalArea").html("<%= j(render 'habits/form', habit: @habit) %>")
$("#modalArea").find(".modal").modal('show')
<% end %>
