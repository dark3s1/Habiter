<div id="tags_<%= tag.name %>">
  <div class="card-body pr-1">
    <button type="submit" class="btn right" >
      <%= link_to edit_tag_path(tag), remote: true, method: :get do %> <%# 編集ボタン %>
        <i class="fas fa-cog"></i>
      <% end %>
      <%= link_to tag, remote: true, data: { confirm: '本当に削除しますか?' }, method: :delete do %> <%# ゴミ箱ボタン %>
        <i class="fas fa-trash"></i>
      <% end %>
    </button>
    <div class="tag-lay" style= "background-color:<%= tag.color %>;">
      <%= tag.name %>
    </div>
  </div>
</div>
