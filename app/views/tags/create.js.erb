<% if @status %>
$("#tagsIndex").replaceWith("<%= j(render @tag, tags: @tags ) %>");

<% else %>
<%= render 'remove_modal' %>
$("#modalArea").html("<%= j(render 'tags/form', tag: @tag) %>")
<%= render 'show_modal' %>

<% end %>

$("#tagModal").modal('hide');
$('body').removeClass('modal-open');
$('.modal-backdrop').remove();