$("#tagModal").modal("hide");
$('body').removeClass('modal-open');
$('.modal-backdrop').remove();

<% if @status %>
$('[data-model_name="tag"]').filter('[data-id="<%= @tag.id %>"]').replaceWith("<%= j(render @tag) %>");

<% else %>
$("#modalArea").html("<%= j(render 'form', tag: @tag) %>")
$("#modalArea").find(".modal").modal('show')
<% end %>