<div class="modal fade" id="calendarModal" tabindex="-1" role="dialog" aria-labelledby="calendarModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_with(model: habit, remote: true) do |form| %>
        <div class="modal-header">
          <h5 class="modal-title" id="calendarModal"><%= "#{params[:action].camelize}" %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="field">
            <%= form.collection_check_boxes :habit_ids, current_user.habits, :id, :name do |b| %>
              <%= b.label(class: "form-check") do %>
                <%= b.check_box(class: "form-check-input") %>
                <div class="btn btn-secondary" >
                  <%= b.text %>
                </div>
              <% end %>
            <% end %>
          </div>
          <div class="field">
            <%= form.label :日 %>
            <%= form.date_field :date, value: Time.now.strftime("%Y-%m-%d") %></br>
            <%= form.label :実際に行なった時間 %>
            <%= form.number_field :real, value: 30 %>
          </div>
        </div>
        <div class="modal-footer actions">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= form.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>